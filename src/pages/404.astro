---
import Link from "@/components/Link.astro";
import BaseLayout from "@/layouts/BaseLayout.astro";
---

<BaseLayout title="404" showNav={false}>
  <main
    class="font-mono flex flex-col items-center justify-center min-h-[70vh] px-4"
  >
    <pre
      class="whitespace-pre m-0 mb-8 text-sm md:text-base">
<span class="text-error font-bold">[ERROR] 404</span>
Entry not found in logs.

[ x ] entry removed <span class="cursor">▌</span>
    </pre>

    <nav class="flex items-center gap-4">
      <Link
        href="/archive"
        class="decoration-1 underline underline-offset-8 hover:text-accent transition-colors"
      >
        View Archive
      </Link>
      <span class="text-text-muted" aria-hidden="true">·</span>
      <Link
        href="/"
        class="decoration-1 underline underline-offset-8 hover:text-accent transition-colors"
      >
        Go Home
      </Link>
    </nav>
  </main>
</BaseLayout>

<style>
  .cursor {
    animation: blink 1.4s steps(1) infinite;
  }

  @keyframes blink {
    50% {
      opacity: 0;
    }
  }
</style>
