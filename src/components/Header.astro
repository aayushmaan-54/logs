---
import { SITE } from '@/site.config';
import Logo from './Logo.astro';
import ThemeToggle from './ThemeToggle.astro';
---

<header class='mx-auto w-full max-w-app pt-12'>
  <div class='flex items-start justify-between'>
    <div class='flex flex-col items-start'>
      <a href='/' class='flex items-center gap-1 font-semibold tracking-tight'>
        <Logo size={1.5} textSize={0.7} />
        <p class='text-2xl'>{SITE.title}</p>
      </a>
      <p class='text-sm font-thin text-foreground-muted'>
        Building. Thinking. Writing.
      </p>
    </div>
    <ThemeToggle />
  </div>
</header>
