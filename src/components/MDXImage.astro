---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

interface Props {
  src: string | ImageMetadata;
  alt?: string;
  title?: string;
  width?: number;
  height?: number;
  loading?: 'lazy' | 'eager';
  class?: string;
}

const {
  src,
  alt = '',
  title,
  width,
  height,
  loading = 'lazy',
  class: className = '',
  ...rest
} = Astro.props;

const isExternal =
  typeof src === 'string' &&
  (src.startsWith('http://') ||
    src.startsWith('https://') ||
    src.startsWith('//'));
const isPublicPath = typeof src === 'string' && src.startsWith('/');
const isRelativePath =
  typeof src === 'string' && (src.startsWith('../') || src.startsWith('./'));
const imageSrc = typeof src === 'string' ? src : '';
---

{
  isExternal || isPublicPath || isRelativePath ? (
    <img
      src={imageSrc}
      alt={alt}
      title={title}
      width={width}
      height={height}
      loading={loading}
      decoding='async'
      class={`my-4 h-auto w-full rounded-lg ${className}`}
      {...rest}
    />
  ) : (
    <Image
      src={src as ImageMetadata}
      alt={alt}
      title={title}
      width={width}
      height={height}
      loading={loading}
      class={`my-4 rounded-lg ${className}`}
      {...rest}
    />
  )
}
